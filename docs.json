{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Emerge API",
  "colors": {
    "primary": "#1E3A5F",
    "light": "#2E5A8F",
    "dark": "#1E3A5F"
  },
  "favicon": "/favicon.ico",
  "logo": {
    "light": "/logo/emerge-logo.svg",
    "dark": "/logo/emerge-logo.svg"
  },
  "api": {
    "playground": {
      "display": "interactive"
    }
  },
  "openapi": "openapi/emerge.json",
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "tabs": [
    {
      "name": "Guides",
      "url": "/"
    },
    {
      "name": "Link API",
      "url": "/link"
    },
    {
      "name": "Query API",
      "url": "/query"
    },
    {
      "name": "AI Integration",
      "url": "/ai"
    }
  ],
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart"
            ]
          },
          {
            "group": "SDKs",
            "pages": [
              "sdks/typescript",
              "sdks/python"
            ]
          },
          {
            "group": "Resources",
            "pages": [
              "changelog"
            ]
          }
        ]
      },
      {
        "tab": "Link API",
        "groups": [
          {
            "group": "Guides",
            "pages": [
              "link/overview",
              "link/authentication",
              "link/create-link",
              "link/callbacks",
              "link/webhooks"
            ]
          },
          {
            "group": "Endpoints",
            "openapi": "openapi/emerge.json",
            "pages": [
              "POST /configs",
              "GET /consent/status/{uid}",
              "GET /export/status/{uid}"
            ]
          }
        ]
      },
      {
        "tab": "Query API",
        "groups": [
          {
            "group": "Guides",
            "pages": [
              "query/overview",
              "query/pagination"
            ]
          },
          {
            "group": "Async Endpoints",
            "openapi": "openapi/emerge.json",
            "pages": [
              "GET /v1/search",
              "GET /v1/browsing",
              "GET /v1/youtube",
              "GET /v1/ads",
              "GET /v1/job/{task_id}",
              "GET /v1/jobs"
            ]
          },
          {
            "group": "Sync Endpoints",
            "openapi": "openapi/emerge.json",
            "pages": [
              "GET /v1/sync/get_search",
              "GET /v1/sync/get_browsing",
              "GET /v1/sync/get_youtube",
              "GET /v1/sync/get_ads"
            ]
          }
        ]
      },
      {
        "tab": "AI Integration",
        "groups": [
          {
            "group": "AI-Native Docs",
            "pages": [
              "ai/overview",
              "ai/mcp-setup",
              "ai/contextual-menu",
              "ai/examples"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Control Room",
          "href": "https://dashboard.emergedata.ai",
          "icon": "gauge"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@emergedata.ai",
          "icon": "envelope"
        }
      ]
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@emergedata.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Control Room",
      "href": "https://dashboard.emergedata.ai"
    }
  },
  "footer": {
    "socials": {
      "linkedin": "https://linkedin.com/company/emergedata"
    }
  }
}
