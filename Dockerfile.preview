FROM node:20-alpine

WORKDIR /app

# Install mintlify CLI and socat (fallback for localhost binding)
RUN npm install -g mintlify@latest && \
    apk add --no-cache socat curl

# Copy entrypoint first so docs content changes don't invalidate this layer
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Copy docs content
COPY . .

EXPOSE 3000

HEALTHCHECK --interval=15s --timeout=5s --start-period=120s --retries=3 \
  CMD curl -f http://localhost:3000/ || exit 1

CMD ["/entrypoint.sh"]
